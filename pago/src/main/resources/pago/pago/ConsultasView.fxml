<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox prefHeight="700.0" prefWidth="1000.0" spacing="15" xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="pago.pago.view.ConsultasView">
    <padding>
        <Insets bottom="20" left="20" right="20" top="20" />
    </padding>

    <!-- TÃTULO -->
    <HBox alignment="CENTER" style="-fx-background-color: #FF9800; -fx-padding: 15px; -fx-background-radius: 5px;">
        <Label text="CONSULTAS Y FUNCIONALIDADES AVANZADAS" style="-fx-text-fill: white; -fx-font-size: 22px; -fx-font-weight: bold;" />
    </HBox>

    <!-- TABS PARA CADA FUNCIONALIDAD -->
    <TabPane tabClosingPolicy="UNAVAILABLE" VBox.vgrow="ALWAYS">

        <!-- TAB 1: CONSULTAR ESTADO DEL PAGO -->
        <Tab text="ðŸ“Š Consultar Estado Pago">
            <VBox spacing="15" style="-fx-padding: 20;">
                <Label text="Funcionalidad: Consultar Estado del Pago" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #FF9800;" />
                <Separator />

                <HBox spacing="10" alignment="CENTER_LEFT">
                    <Label text="ID del Pago:" />
                    <TextField fx:id="txtConsultaIdPago" promptText="Ej: PAG-001" prefWidth="200" />
                    <Button fx:id="btnConsultarEstado" text="ðŸ” Consultar" style="-fx-background-color: #4CAF50; -fx-text-fill: white;" />
                </HBox>

                <TextArea fx:id="txtResultadoConsulta" editable="false" prefRowCount="15"
                          style="-fx-font-family: monospace; -fx-font-size: 13px;" />
            </VBox>
        </Tab>

        <!-- TAB 2: ACTUALIZAR ESTADO DEL PAGO -->
        <Tab text="âœï¸ Actualizar Estado">
            <VBox spacing="15" style="-fx-padding: 20;">
                <Label text="Funcionalidad: Actualizar Estado del Pago" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #FF9800;" />
                <Separator />

                <GridPane hgap="15" vgap="10">
                    <Label text="ID del Pago:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                    <TextField fx:id="txtActualizarIdPago" promptText="Ej: PAG-001" GridPane.columnIndex="1" GridPane.rowIndex="0" />

                    <Label text="Nuevo Estado:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                    <ComboBox fx:id="cmbNuevoEstado" promptText="Seleccione estado..." GridPane.columnIndex="1" GridPane.rowIndex="1" />

                    <Button fx:id="btnActualizarEstado" text="ðŸ’¾ Actualizar Estado"
                            style="-fx-background-color: #2196F3; -fx-text-fill: white;"
                            GridPane.columnIndex="1" GridPane.rowIndex="2" />

                    <columnConstraints>
                        <ColumnConstraints minWidth="150" />
                        <ColumnConstraints minWidth="300" />
                    </columnConstraints>
                </GridPane>

                <TextArea fx:id="txtResultadoActualizar" editable="false" prefRowCount="12"
                          style="-fx-font-family: monospace; -fx-font-size: 13px;" />
            </VBox>
        </Tab>

        <!-- TAB 3: VALIDAR DATOS DEL PAGO -->
        <Tab text="âœ… Validar Datos">
            <VBox spacing="15" style="-fx-padding: 20;">
                <Label text="Funcionalidad: Validar Datos del Pago" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #FF9800;" />
                <Separator />

                <GridPane hgap="15" vgap="10">
                    <Label text="ID Pago:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                    <TextField fx:id="txtValidarId" GridPane.columnIndex="1" GridPane.rowIndex="0" />

                    <Label text="Tipo:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                    <ComboBox fx:id="cmbValidarTipo" GridPane.columnIndex="1" GridPane.rowIndex="1" />

                    <Label text="Valor:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                    <TextField fx:id="txtValidarValor" promptText="Ej: 450000" GridPane.columnIndex="1" GridPane.rowIndex="2" />

                    <Label text="Fecha:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
                    <TextField fx:id="txtValidarFecha" promptText="dd/MM/yyyy" GridPane.columnIndex="1" GridPane.rowIndex="3" />

                    <Label text="ID Reserva:" GridPane.columnIndex="0" GridPane.rowIndex="4" />
                    <TextField fx:id="txtValidarReserva" promptText="Ej: RSV-001" GridPane.columnIndex="1" GridPane.rowIndex="4" />

                    <Button fx:id="btnValidarDatos" text="âœ“ Validar Datos"
                            style="-fx-background-color: #4CAF50; -fx-text-fill: white;"
                            GridPane.columnIndex="1" GridPane.rowIndex="5" />

                    <columnConstraints>
                        <ColumnConstraints minWidth="120" />
                        <ColumnConstraints minWidth="300" />
                    </columnConstraints>
                </GridPane>

                <TextArea fx:id="txtResultadoValidacion" editable="false" prefRowCount="8"
                          style="-fx-font-family: monospace; -fx-font-size: 13px;" />
            </VBox>
        </Tab>

        <!-- TAB 4: HISTORIAL DE PAGOS -->
        <Tab text="ðŸ“‹ Historial Pagos">
            <VBox spacing="15" style="-fx-padding: 20;">
                <Label text="Funcionalidad: Mostrar HistÃ³rico de Pagos" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #FF9800;" />
                <Separator />

                <HBox spacing="10" alignment="CENTER_LEFT">
                    <Label text="ID de la Reserva:" />
                    <TextField fx:id="txtHistorialReserva" promptText="Ej: RSV-001" prefWidth="200" />
                    <Button fx:id="btnMostrarHistorial" text="ðŸ“Š Ver Historial" style="-fx-background-color: #9C27B0; -fx-text-fill: white;" />
                </HBox>

                <TableView fx:id="tablaHistorial" prefHeight="300">
                    <columns>
                        <TableColumn fx:id="colHistorialId" text="ID Pago" prefWidth="100" />
                        <TableColumn fx:id="colHistorialFecha" text="Fecha" prefWidth="150" />
                        <TableColumn fx:id="colHistorialTipo" text="Tipo" prefWidth="120" />
                        <TableColumn fx:id="colHistorialValor" text="Valor" prefWidth="120" />
                        <TableColumn fx:id="colHistorialEstado" text="Estado" prefWidth="150" />
                    </columns>
                </TableView>

                <TextArea fx:id="txtResumenHistorial" editable="false" prefRowCount="4"
                          style="-fx-font-family: monospace; -fx-font-size: 12px;" />
            </VBox>
        </Tab>

        <!-- TAB 5: CONSULTAR VERIFICACIONES CON FILTROS -->
        <Tab text="ðŸ”Ž Filtrar Verificaciones">
            <VBox spacing="15" style="-fx-padding: 20;">
                <Label text="Funcionalidad: Consultar Verificaciones con Filtros" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #FF9800;" />
                <Separator />

                <GridPane hgap="15" vgap="10">
                    <Label text="Filtrar por Fecha:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                    <TextField fx:id="txtFiltroFecha" promptText="dd/MM/yyyy (opcional)" GridPane.columnIndex="1" GridPane.rowIndex="0" />

                    <Label text="Filtrar por Encargado:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                    <TextField fx:id="txtFiltroEncargado" promptText="Nombre (opcional)" GridPane.columnIndex="1" GridPane.rowIndex="1" />

                    <Label text="Filtrar por Resultado:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                    <ComboBox fx:id="cmbFiltroResultado" promptText="Todos" GridPane.columnIndex="1" GridPane.rowIndex="2" />

                    <Button fx:id="btnFiltrar" text="ðŸ” Aplicar Filtros"
                            style="-fx-background-color: #00BCD4; -fx-text-fill: white;"
                            GridPane.columnIndex="1" GridPane.rowIndex="3" />
                    <Button fx:id="btnLimpiarFiltros" text="ðŸ—‘ Limpiar Filtros"
                            style="-fx-background-color: #757575; -fx-text-fill: white;"
                            GridPane.columnIndex="2" GridPane.rowIndex="3" />

                    <columnConstraints>
                        <ColumnConstraints minWidth="150" />
                        <ColumnConstraints minWidth="300" />
                        <ColumnConstraints minWidth="150" />
                    </columnConstraints>
                </GridPane>

                <Label text="Resultados:" style="-fx-font-weight: bold;" />
                <TableView fx:id="tablaVerificaciones" prefHeight="250">
                    <columns>
                        <TableColumn fx:id="colVerifId" text="ID" prefWidth="80" />
                        <TableColumn fx:id="colVerifIdPago" text="ID Pago" prefWidth="100" />
                        <TableColumn fx:id="colVerifFecha" text="Fecha" prefWidth="150" />
                        <TableColumn fx:id="colVerifResultado" text="Resultado" prefWidth="120" />
                        <TableColumn fx:id="colVerifEncargado" text="Encargado" prefWidth="150" />
                        <TableColumn fx:id="colVerifObs" text="Observaciones" prefWidth="250" />
                    </columns>
                </TableView>
            </VBox>
        </Tab>
    </TabPane>
</VBox>